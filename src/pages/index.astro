---
import Layout from '../layouts/Layout.astro';
import BoxImg from "../images/box.png";
import LogoImg from "../images/logo.png";
import GoogleImg from "../images/google.png";
import AmazonImg from "../images/amazon.png";
import MckinseyImg from "../images/mckinsey.png";
import CoinbaseImg from "../images/coinbase.png";
import MetamaskImg from "../images/metamask.png";
import BinanceImg from "../images/binance.png";
---

<Layout title="Launchy">
	<main class="flex justify-center items-center w-screen h-full min-h-screen bg-white">
		<img src={BoxImg} alt="A box" class="cub-1">
		<img src={BoxImg} alt="A box" class="cub-2">
		<img src={BoxImg} alt="A box" class="cub-3">
		<div class="px-4 mx-auto max-w-md sm:px-6 lg:px-8 text-center">
			<div class="grid max-w-lg grid-cols-1 mx-auto lg:max-w-none">
				<div class="bg-white p-10 rounded-3xl card-shadow z-50 flex flex-col space-y-2">
					<img src={LogoImg} alt="Launchy Logo" width="256" height="60" class="w-64 h-auto mx-auto"/>
					<div>
						<h1 class="text-3xl text-gray-900 sm:text-4xl xl:text-4xl font-light"><span class="font-bold">Web3 Made</span><br/>Simple</h1>
						<p class="px-4 mt-5 font-normal text-gray-900 sm:px-0">
							"Stay up to date with the latest web3 products, news, strategies and trends."
						</p>
					</div>
					<div class="flex flex-col items-center py-2">
						<div class="w-full md:flex-1 p-1.5">
							<div class="p-1 bg-gradient-to-r from-indigo-200 via-red-200 to-yellow-100 rounded-full">
							  <input class="w-full px-6 py-4 placeholder-gray-300 text-base text-black  outline-none rounded-full" type="text" placeholder="Email Address">
							</div>
						</div>
						<div class="w-full md:w-auto p-1.5">
							<button class="group relative font-heading py-2 px-12 block w-full md:w-auto text-lg text-white font-semibold bg-coral hover:bg-gradient-to-t hover:from-red-200 hover:to-red-600 overflow-hidden rounded-full">
							  <div class="absolute top-0 left-0 transform -translate-x-full group-hover:-translate-x-0 h-full w-full transition ease-in-out duration-500 bg-gradient-cyan"></div>
							  <p class="relative z-10">Subscribe</p>
							</button>
						  </div>
					</div>
					<div class="font-extralight pt-2">
						<p>Read by people working at:</p>
						<div class="py-2 flex flex-col space-y-2">
							<div class="grid grid-cols-3 gap-2">
								<img src={CoinbaseImg} alt="Coinbase logo" width="100" height="32" class="w-[100px] h-auto">
								<img src={BinanceImg} alt="Binance logo" width="100" height="32" class="w-[100px] h-auto">
								<img src={MetamaskImg} alt="Metamask logo" width="100" height="32" class="w-[100px] h-auto">
							</div>
							<div class="grid grid-cols-3 gap-2">
								<img src={AmazonImg} alt="Amazon logo" width="100" height="32" class="w-[100px] h-auto">
								<img src={GoogleImg} alt="Google logo" width="100" height="32" class="w-[100px] h-auto">
								<img src={MckinseyImg} alt="McKinsey logo" width="100" height="32" class="w-[100px] h-auto">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>
<style>
.card-shadow {
	box-shadow: 0 10px 44px rgba(0,0,0,.05),0 20px 48px rgba(0,0,0,.05),0 1px 24px rgba(0,0,0,.05)
}

.cub-1 {
	left: 0;
	transform: scaleY(-1) translate(50%);
	-moz-transform: scaleX(-1);
	-webkit-transform: scaleX(-1) translate(50%);
	-o-transform: scaleX(-1);
	-ms-transform: scaleX(-1);
	width: 20vh
}

.cub-1,.cub-2 {
    bottom: 0;
    position: absolute
}

.cub-2 {
    right: 0;
    -webkit-transform: translate(-5%,-20%);
    transform: translate(-5%,-20%);
    width: 15vh
}

.cub-3 {
    position: absolute;
    right: 0;
    top: 0;
    -webkit-transform: translate(-300%,300%);
    transform: translate(-300%,300%);
    width: 5vh
}
</style>